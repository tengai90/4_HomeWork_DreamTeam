@model IEnumerable<LanguagesEncyclopedia.Solution>

@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "Solutions";
}

<div id="page-wrapper">
  <div class="page-content page-content-ease-in">
       <div class="row">
           <div class="col-mg-12">
            <div class="page-title">
               <h1> Solutions</h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i>  <a href="@Url.Action("Service", "Home")"> Service </a>
                                </li>
                                <li class="active">Solutions</li>
                            </ol>
            </div>
       </div>



    <div class="row">

                    <div class="col-mg-12">

                        <div class="tableportlet portlet-default">
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h4>Solutions data table</h4>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="portlet-tablebody">
    <p> @Html.ActionLink("Create", "Create", "Solution", new { @class = "btn btn-success" }) </p>

<table id="table" class="table table-bordered">
 <thead>
    <tr>
        <th>
            Task @Html.DisplayNameFor(model => model.LanguageTask.Task.Name)
        </th>
        <th>
            Task @Html.DisplayNameFor(model => model.LanguageTask.Task.Description)
        </th>
        <th>
            Language @Html.DisplayNameFor(model => model.LanguageTask.Language.Name)
        </th>

        <th>
            Task Solution
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTask.Task.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTask.Task.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTask.Language.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.SolutionID }, new { @class = "btn btn-primary glyphicon glyphicon-edit" })
            @Html.ActionLink(" ", "Details", new { id = item.SolutionID }, new { @class = "btn btn-info glyphicon glyphicon-comment" }) 
            @Html.ActionLink(" ", "Delete", new { id = item.SolutionID }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
        </td>
    </tr>
}
</tbody>
</table>
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->

                    </div>
                    <!-- /.col-lg-12 -->

                </div>


</div>
</div>

 <script type="text/javascript">
     console.log("OK");
     $(document).ready(function () {
         $('#table').DataTable();
     });
</script>