@model IEnumerable<LanguagesEncyclopedia.Solution>

@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "Solutions";
}

<div id="page-wrapper">
  <div class="container-fluid">
       <div class="row">
           <div class="col-mg-12">
                <h1 class="page-header"> Solutions</h1>
            </div>
       </div>
    </div>

    <p>
        <button class="btn btn-primary">@Html.ActionLink("Create New", "Create", "Solution", new { @class = "txt_color" })</button>
    </p>

<table id="table" class="table table-bordered">
 <thead>
    <tr>
        <th>
            Task @Html.DisplayNameFor(model => model.LanguageTask.Task.Name)
        </th>
        <th>
            Task @Html.DisplayNameFor(model => model.LanguageTask.Task.Description)
        </th>
        <th>
            Language @Html.DisplayNameFor(model => model.LanguageTask.Language.Name)
        </th>

        <th>
            Task Solution
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTask.Task.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTask.Task.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LanguageTask.Language.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <button class="btn btn-primary">@Html.ActionLink("Edit", "Edit", new { id = item.SolutionID }, new { @class = "txt_color" }) </button>
             <button class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.SolutionID }, new { @class = "txt_color" }) </button>
             <button class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.SolutionID }, new { @class = "txt_color" }) </button>
        </td>
    </tr>
}
</tbody>
</table>
 </div>

 <script type="text/javascript">
     console.log("OK");
     $(document).ready(function () {
         $('#table').DataTable();
     });
</script>