@model LanguagesEncyclopedia.Solution


@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "Edit";
}

<div id="page-wrapper">
  <div class="container-fluid">
       <div class="row">
           <div class="col-mg-12">
                <h1 class="page-header">Edit Solutions</h1>
            </div>
       </div>
    </div>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Solution</legend>

        @Html.HiddenFor(model => model.SolutionID)

        <div class="editor-label">
            @Html.LabelFor(model => model.LanguageTaskID, "LanguageTask")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LanguageTaskID", String.Empty)
            @Html.ValidationMessageFor(model => model.LanguageTaskID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>


        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

    </div>