@model LanguagesEncyclopedia.Task

@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "Details";
}

<div id="page-wrapper">
  <div class="page-content page-content-ease-in">
       <div class="row">
           <div class="col-mg-12">
            <div class="page-title">
               <h1> Task detail</h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i>  <a href="@Url.Action("Service", "Home")"> Service </a>
                                </li>
                                <li class="active">Task detail</li>
                            </ol>
            </div>
       </div>

           <div class="row">

                    <div class="col-mg-12">

                        <div class="tableportlet portlet-default">
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h4>Task data table</h4>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="portlet-tablebody">


                     <div class="form-group">
       <div class="row">
                <div class="col-xs-6 has-feedback">

    <div class="display-label">
         @Html.LabelFor(model => model.Name, "Name"):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">
         @Html.LabelFor(model => model.Description, "Description"):
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

<div style="padding-top: 20px"> 
    @Html.ActionLink("Back", "Index", "Task", new { @class = "btn btn-warning" })
    @Html.ActionLink("Edit", "Edit", "Task", new { id = Model.TaskID }, new { @class = "btn btn-primary" }) 
</div>
</div>
           </div>
   </div>

                               </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->

                    </div>
                    <!-- /.col-lg-12 -->

                </div>


</div>


                </div>


</div>