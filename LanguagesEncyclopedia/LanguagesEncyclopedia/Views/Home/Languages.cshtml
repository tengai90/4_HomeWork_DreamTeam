@model IEnumerable<LanguagesEncyclopedia.Language>
@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "Languages";
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-mg-12">
                <h1 class="page-header">Language</h1>
            </div>
        </div>
    </div>

    <p>
        <button class="btn btn-primary">@Html.ActionLink("Create New Language", "CreateLanguage", "Home", new { @class = "txt_color" })</button>
    </p>
    <table id="table" class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                IDE List
            </th>
            <th>
                Paradigm Type
            </th>
            <th>
                Relationships
            </th>
            <!--image-->
            <th>
                Image
            </th>
            <th>
             
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date.Year);
                </td>

                <td>
                    @{
                        var listIDE = item.LanguageIDEs.Where(p => p.LanguageID == item.LanguageID);
                        foreach (var cur in listIDE)
                        {
                          <p>@Html.DisplayFor(model => cur.IDE.Name);</p>  
                        }
                    }
                </td>
                <td>
                    @{
                        var listPARADIGMID = item.LanguageParadigms.Where(p => p.LanguageID == item.LanguageID);
                        foreach (var a in listPARADIGMID)
                        {
                            <p>@Html.DisplayFor(model => a.Paradigm.Name);</p>
                        }

                    }
                </td>
                <td>
                    @{
                        var listRELATIONSHIP = item.LanguageRelationships1.Where(p => p.LanguageID == item.LanguageID);
                        foreach (var a in listRELATIONSHIP)
                        {
                            <p>@Html.DisplayFor(model => a.Language.Name);</p>
                        }

                    }
                </td>
                <!--image-->
                <td>
                        <img src= "@Html.DisplayFor(modelItem => item.Image)" alt="" width="100" height="80"/>
                </td>
                <td>
                     <button class="btn btn-primary">@Html.ActionLink("Edit", "LanguageEdit", new { id = item.LanguageID, name = item.Name, desc = item.Description, date = item.Date.Year, image = item.Image }, new { @class = "txt_color" }) </button>
                     <button class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.LanguageID }, new { @class = "txt_color" }) </button>
                     <button class="btn btn-danger">@Html.ActionLink("Delete", "LanguageDelete", new { id = item.LanguageID }, new { @class = "txt_color" }) </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
    
</div>
<script type="text/javascript">
    console.log("OK");
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>