@model IEnumerable<LanguagesEncyclopedia.Paradigm>
@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "Paradigms";
}

<div id="page-wrapper">
  <div class="page-content page-content-ease-in">
       <div class="row">
           <div class="col-mg-12">
            <div class="page-title">
               <h1> Paradigms </h1>
                            <ol class="breadcrumb">
                                <li><i class="fa fa-dashboard"></i>  <a href="@Url.Action("Service", "Home")"> Service </a>
                                </li>
                                <li class="active">Paradigms</li>
                            </ol>
            </div>
       </div>



    <div class="row">

                    <div class="col-mg-12">

                        <div class="tableportlet portlet-default">
                            <div class="portlet-heading">
                                <div class="portlet-title">
                                    <h4>Paradigms data table</h4>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="portlet-tablebody">
                              
<p> @Html.ActionLink("Create", "CreateParadigm", "Home", new { @class = "btn btn-success" })</p>
<table id ="table" class="table table-bordered">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th style="width: 6%"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
               @Html.ActionLink(" ", "EditParadigm", new { id = item.ParadigmID }, new { @class = "btn btn-primary glyphicon glyphicon-edit" })
               @Html.ActionLink(" ", "DeleteParadigm", new { id = item.ParadigmID }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })
            </td>
        </tr>
    }
    </tbody>
</table>
                            </div>
                            <!-- /.portlet-body -->
                        </div>
                        <!-- /.portlet -->

                    </div>
                    <!-- /.col-lg-12 -->

                </div>


</div>

</div>


<script type="text/javascript">
    console.log("OK");
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>