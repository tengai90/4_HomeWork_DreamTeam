@model IEnumerable<LanguagesEncyclopedia.IDE>


@{
    Layout = "~/Views/Shared/_ServiceLayout.cshtml";
}
@{
    ViewBag.Title = "IDE";
}

<div id="page-wrapper">
  <div class="container-fluid">
       <div class="row">
           <div class="col-mg-12">
                <h1 class="page-header">IDE</h1>
            </div>
       </div>
    </div>


<p>
    <button class="btn btn-primary">@Html.ActionLink("Create New", "IDECreate", "Home", new { @class = "txt_color" })</button>
</p>
    <table id="table" class="table table-bordered">
         <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.URL)
                </th>
                <th>Service</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <a href="@Html.DisplayFor(modelItem => item.URL)">@Html.DisplayFor(modelItem => item.URL)</a> 
                    </td>
                    <td>
                        <button class="btn btn-primary">@Html.ActionLink("Edit", "IDEEdit", new { id = item.IDEID, name = item.Name, url = item.URL }, new { @class = "txt_color" })</button>
                        <button class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.IDEID }, new { @class = "txt_color" })</button>
                        <button class="btn btn-danger">@Html.ActionLink("Delete", "DeleteIDE", new { id = item.IDEID }, new { @class = "txt_color" })</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<script type="text/javascript">
    console.log("OK");
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>